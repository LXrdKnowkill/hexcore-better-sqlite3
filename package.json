{
  "name": "hexcore-better-sqlite3",
  "version": "1.1.0",
  "description": "HexCore fork of better-sqlite3 with standard prebuild packaging",
  "main": "lib/index.js",
  "scripts": {
    "install": "node-gyp-build",
    "build": "node-gyp rebuild",
    "build:debug": "node-gyp rebuild --debug",
    "prebuild": "prebuildify --napi --strip",
    "test": "node test/smoke-test.js",
    "clean": "node-gyp clean"
  },
  "keywords": [
    "hexcore",
    "sqlite",
    "better-sqlite3",
    "database",
    "native",
    "napi"
  ],
  "author": "HikariSystem",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LXrdKnowkill/hexcore-better-sqlite3.git"
  },
  "bugs": {
    "url": "https://github.com/LXrdKnowkill/hexcore-better-sqlite3/issues"
  },
  "engines": {
    "vscode": "^1.0.0",
    "node": ">=18.0.0"
  },
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "files": [
    "binding.gyp",
    "src/*.[ch]pp",
    "lib/**",
    "deps/**",
    "index.d.ts",
    "README.md"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-gyp-build": "^4.6.0"
  },
  "devDependencies": {
    "prebuildify": "^6.0.0",
    "node-gyp": "^10.0.0"
  }
}
