{
  "name": "hexcore-better-sqlite3",
  "version": "2.0.0",
  "description": "HexCore N-API wrapper for SQLite (better-sqlite3 fork)",
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "install": "prebuild-install -r napi || node-gyp rebuild",
    "build": "node-gyp rebuild",
    "build:debug": "node-gyp rebuild --debug",
    "prebuild": "prebuildify --napi --strip",
    "test": "node test/test.js",
    "clean": "node-gyp clean"
  },
  "keywords": [
    "hexcore",
    "sqlite",
    "better-sqlite3",
    "database",
    "native",
    "napi"
  ],
  "author": "HikariSystem <hikarisystem@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LXrdKnowkill/hexcore-better-sqlite3.git"
  },
  "bugs": {
    "url": "https://github.com/LXrdKnowkill/hexcore-better-sqlite3/issues"
  },
  "homepage": "https://github.com/LXrdKnowkill/hexcore-better-sqlite3#readme",
  "engines": {
    "vscode": "^1.0.0",
    "node": ">=18.0.0"
  },
  "activationEvents": [],
  "files": [
    "src/",
    "deps/sqlite3/include/",
    "deps/sqlite3/*.lib",
    "deps/sqlite3/*.a",
    "lib/",
    "prebuilds/",
    "binding.gyp",
    "index.js",
    "index.mjs",
    "index.d.ts",
    "README.md"
  ],
  "binary": {
    "napi_versions": [8]
  },
  "devDependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.0",
    "prebuildify": "^6.0.0",
    "prebuild-install": "^7.1.1"
  }
}
